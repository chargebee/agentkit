{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"declaration": false,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "tsup.config.ts"],
	"exclude": ["node_modules", "dist"]
}
